<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/cardItem"
    android:background="@drawable/customborder"
    android:layout_margin="@dimen/card_row_item_layout_margin">

    <ImageView
        android:id="@+id/iv_card_row_avatar_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_info_image_layout_heigth"
        android:src="@drawable/ic_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="@dimen/cards_master_icon_padding" />

    <TextView
        android:id="@+id/tv_card_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_card_row_avatar_image"
        app:layout_constraintLeft_toLeftOf="@id/iv_card_row_avatar_image"
        app:layout_constraintRight_toRightOf="@id/iv_card_row_avatar_image"
        android:text="@string/prueba_card_nombre" />

</androidx.constraintlayout.widget.ConstraintLayout>
